+/* Endian translation (file format is little endian, so on big endian we need
+ * to twiddle. */
+#if PARROT_BIGENDIAN
+static void switch_endian(char *bytes, size_t size)
+{
+    size_t low  = 0;
+    size_t high = size - 1;
+    while (high > low) {
+        char tmp    = bytes[low];
+        bytes[low]  = bytes[high];
+        bytes[high] = tmp;
+        low++;
+        high--;
+    }
+}
+#endif
+
 /* ***************************************************************************
