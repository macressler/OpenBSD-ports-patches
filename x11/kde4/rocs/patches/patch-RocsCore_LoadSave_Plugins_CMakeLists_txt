+    set(CAN_BUILD_DotFileFormat No)
+else(${Boost_VERSION} VERSION_LESS 104900)
+    set(CAN_BUILD_DotFileFormat Yes)
+endif(${Boost_VERSION} VERSION_LESS 104900)
+
