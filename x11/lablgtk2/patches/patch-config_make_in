+FINDLIBDIR=@FINDLIBDIR@
 CAMLBEST=@OCAMLBEST@
 CAMLWIN32=@OCAMLWIN32@
 CAMLDEP=@OCAMLDEP@
@@ -56,9 +57,11 @@ BINDIR=$(DESTDIR)@bindir@
 # where to install the man page
 MANDIR=$(DESTDIR)@mandir@
 
+LABLGTKDIR=@LIBDIR@/lablgtk2
 INSTALLDIR=$(DESTDIR)@LIBDIR@/lablgtk2
