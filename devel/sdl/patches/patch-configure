+CheckSndio()
+{
+	if [ x"$WITH_SNDIO" = x"Yes" ]; then
+
+                cat >>confdefs.h <<\_ACEOF
+#define SDL_AUDIO_DRIVER_SNDIO 1
+_ACEOF
+                SOURCES="$SOURCES $srcdir/src/audio/libsndio/*.c"
+		EXTRA_LDFLAGS="$EXTRA_LDFLAGS -lsndio"
+	fi
+}
